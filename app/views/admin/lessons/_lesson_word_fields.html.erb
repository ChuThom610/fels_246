<div class="col-lg-6">
  <div><%= hidden_field_tag :lesson_id, @lesson.id %></div>
  <%= f.label :category, class: "text-default lead" %>
  <%= f.collection_select :category_id, @categories,
                          :id, :name, {prompt: "Select category"}, required: false,
                          class: "form-control category_select" %>
</div>
<div class="col-lg-6">
  <%= f.label :word, class: "text-default lead" %>
  <%= f.collection_select :word_id, @words,
                          :id, :name, {prompt: "Select word"}, required: true,
                          class: "form-control word_select" %>
</div>
