<header class="header-global">
  <nav id="navbar-main" class="navbar navbar-main navbar-expand-lg navbar-transparent navbar-light headroom">
    <div class="container">
      <%= link_to t(".brand"), root_path, class: "btn btn-1 btn-outline-success" %>
      <div class="navbar-collapse collapse" id="navbar_global">
        <% if user_signed_in? %>
          <ul class="navbar-nav navbar-nav-hover align-items-lg-center">
            <% if current_user.admin? %>
              <li class="nav-item mx-2">
                <%= link_to t(".words"), admin_words_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to t(".categories"), admin_categories_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to t(".lessons"), admin_lessons_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to t(".users"), admin_users_path, class: "nav-link text-light" %>
              </li>
            <% else %>
              <li class="nav-item mx-2">
                <%= link_to t(".words"), words_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to t(".categories"), categories_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to t(".lessons"), "#", class: "nav-link text-light" %>
              </li>
            <% end %>
          </ul>
          <ul class="navbar-nav align-items-lg-center ml-lg-auto">
            <li class="dropdown">
              <%= link_to "#", id: "noti-count", data: {toggle: "dropdown"} do %>
                <i class="fa fa-bell"></i>
                <sup class="badge badge-pill badge-danger" >
                  <%= current_user.notifications.num_uncheck %>
                </sup>
              <% end %>
              <ul class="dropdown-menu dropdown-notification scrollable-menu">
                <% current_user.notifications.uncheck.each do |noti| %>
                  <li class="dropdown-item noti-item">
                    <%= link_to noti.content, checked_notification_path(noti.id),
                                method: :patch %>
                    <div id="noti-day">
                      <i class="fa fa-clock-o">
                        <%= time_ago_in_words noti.updated_at %>
                      </i>
                    </div>
                  </li>
                <% end %>
              </ul>
            </li>
            <li class="nav-item d-none d-lg-block ml-lg-4 btn-group">
              <%= link_to "#", class: "btn btn-success btn-icon dropdown-toggle",
                :"data-toggle" => "dropdown" do %>
                <i class="fa fa-user"></i>
                <%= t ".account" %>
              <% end %>
              <div class="dropdown-menu">
                <%= link_to current_user, class: "dropdown-item" do %>
                  <i class="fa fa-user-circle"></i>
                  <%= t ".profile" %>
                <% end %>
                <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                  <i class="fa fa-cog"></i>
                  <%= t ".settings" %>
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to destroy_user_session_path, class: "dropdown-item",
                  method: :delete do %>
                  <i class="fa fa-sign-out"></i>
                  <%= t ".logout" %>
                <% end %>
              </div>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav align-items-lg-center ml-lg-auto">
            <li class="nav-item d-none d-lg-block ml-lg-4">
              <%= link_to new_user_session_path,
                class: "btn btn-outline-success btn-icon" do %>
                <span class="btn-inner--icon">
                  <i class="fa fa-sign-in mr-2"></i>
                </span>
                <span class="nav-link-inner--text"><%= t ".signin" %></span>
              <% end %>
            </li>
            <li class="nav-item d-none d-lg-block ml-lg-4">
              <%= link_to new_user_registration_path,
                class: "btn btn-neutral btn-icon" do %>
                <span class="btn-inner--icon">
                  <i class="fa fa-user-plus mr-2"></i>
                </span>
                <span class="nav-link-inner--text"><%= t ".signup" %></span>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
</header>
